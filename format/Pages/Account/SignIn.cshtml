@page
@model format.Pages.Account.SignInModel
@{
    ViewData["Title"] = "SignUp";
}

<br />
<h2 class="text-info">SignUp</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Login.f_UserName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Login.f_UserName" class="form-control" />
            </div>
            <span asp-validation-for="Login.f_UserName"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Login.f_Pwd"></label>
            </div>
            <div class="col-6">
                <input type="password" asp-for="Login.f_Pwd" class="form-control" />
            </div>
            <span asp-validation-for="Login.f_Pwd"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Login" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

